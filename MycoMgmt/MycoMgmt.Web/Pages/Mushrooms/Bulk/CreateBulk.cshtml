@page "/bulk/new"
@model BulkModel

<form method="post">

    <h1>Create Bulk</h1>
    
    <br/>
    <pre>@Model.responseString</pre>
    <br/>
    
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="name" name="name">
    </div>
    <div class="form-group">
        <label for="strain">Strain</label>
        <select class="form-control" id="strain" name="strain">
            <option value="Golden Teacher">Golden Teacher</option>
            <option value="Mazapatec">Mazapatec</option>
            <option value="Cambodian">Cambodian</option>
            <option value="BPlus">B+</option>
        </select>
    </div>
    <div class="form-group">
        <label for="strain">Recipe</label>
        <select class="form-control" id="recipe" name="recipe">
        </select>
    </div>
    <div class="form-group">
        <label for="notes">Notes</label>
        <input type="text" class="form-control" id="notes" name="notes">
    </div>
    <div class="form-group">
        <label for="location">Location</label>
        <select class="form-control" id="location" name="location">
            <option value="Incubation Chamber">Incubation Chamber</option>
            <option value="Wine Cooler">Wine Cooler</option>
            <option value="Fridge">Fridge</option>
            <option value="Grow Tent">Grow Tent</option>
        </select>
    </div>
    <div class="form-group">
        <label for="parent">Parent</label>
        <input type="text" class="form-control" id="parent" name="parent">
    </div>
    <div class="form-group">
        <label for="parenttype">Parent Type</label>
        <select class="form-control" id="parenttype" name="parenttype">
            <option value=""></option>
            <option value="Culture">Culture</option>
            <option value="Spawn">Spawn</option>
            <option value="Bulk">Bulk</option>
            <option value="Fruit">Fruit</option>
        </select>
    </div>
    <div class="form-group">
        <label for="child">Child</label>
        <input type="text" class="form-control" id="child" name="child">
    </div>
    <div class="form-group">
        <label for="childtype">Child Type</label>
        <select class="form-control" id="childtype" name="childtype">
            <option value=""></option>
            <option value="Culture">Culture</option>
            <option value="Spawn">Spawn</option>
            <option value="Bulk">Bulk</option>
            <option value="Fruit">Fruit</option>
        </select>
    </div>
    <div class="form-group">
        <label for="finished">Finished</label>
        <input type="checkbox" class="form-control" id="finished" name="finished">
    </div>
    <div class="form-group">
        <label for="successful">Successful</label>
        <input type="checkbox" class="form-control" id="successful" name="successful">
    </div>
    <div class="form-group">
        <label for="purchased">Purchased</label>
        <input type="checkbox" class="form-control" id="purchased" name="purchased">
    </div>
    <div class="form-group">
        <label for="vendor">Vendor</label>
        <input type="text" class="form-control" id="vendor" name="vendor">
    </div>
    <div class="form-group">
        <label for="finishedon">Finished On</label>
        <input type="date" class="form-control" id="finishedon" value="@DateTime.Now.ToString("yyyy-MM-dd")" name="finishedon">
    </div>
    <div class="form-group">
        <label for="inoculatedon">Innoculated On</label>
        <input type="date" class="form-control" id="inoculatedon" value="@DateTime.Now.ToString("yyyy-MM-dd")" name="inoculatedon">
    </div>
    <div class="form-group">
        <label for="inoculatedby">Innoculated By</label>
        <select class="form-control" id="inoculatedby" name="inoculatedby">
            <option value="Ryan Gillooly">Ryan Gillooly</option>
            <option value="Calum Muirhead">Calum Muirhead</option>
            <option value="Aiden Neizer">Aiden Neizer</option>
            <option value="Callum Neizer">Callum Neizer</option>
        </select>
    </div>
    <div class="form-group">
        <label for="createdOn">Created On</label>
        <input type="date" class="form-control" id="createdOn" value="@DateTime.Now.ToString("yyyy-MM-dd")" name="createdOn">
    </div>
    <div class="form-group">
        <label for="createdBy">Created By</label>
        <select class="form-control" id="createdBy" name="createdBy">
            <option value="Ryan Gillooly">Ryan Gillooly</option>
            <option value="Calum Muirhead">Calum Muirhead</option>
            <option value="Aiden Neizer">Aiden Neizer</option>
            <option value="Callum Neizer">Callum Neizer</option>
        </select>
    </div>
    <div class="form-group">
        <label for="name">Number of Bulk</label>
        <input type="text" class="form-control" id="count" name="count">
    </div>
    
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<br/>
<br/>

@{
    <style>
        form {
          max-width: 500px;
          margin: 0 auto;
          padding: 20px;
          box-sizing: border-box;
          border: 1px solid #ddd;
          border-radius: 4px;
        }
        
        .form-group {
          margin-bottom: 20px;
        }
        
        .form-control {
          width: 100%;
          height: 40px;
          padding: 10px;
          font-size: 16px;
          border: 1px solid #ddd;
          border-radius: 1px;
          box-sizing: border-box;
        }
        
        .form-control:focus {
          border-color: #00b8d4;
          box-shadow: 0 0 10px rgba(0, 184, 212, 0.5);
        }
        
        label {
          display: flex;
          align-items: center;
          font-size: 14px;
          color: #666;
          margin-bottom: 5px;
        }
        
        label i {
          margin-right: 10px;
          font-size: 16px;
        }
        
        button[type="submit"] {
          width: 100%;
          height: 40px;
          background-color: #00b8d4;
          border: none;
          border-radius: 4px;
          font-size: 16px;
          color: #fff;
          cursor: pointer;
          transition: background-color 0.2s;
        }
        
        button[type="submit"]:hover {
          background-color: #0095c6;
        }
    </style>
}