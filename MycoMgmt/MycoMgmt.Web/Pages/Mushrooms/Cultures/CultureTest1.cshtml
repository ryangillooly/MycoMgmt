@page "/culture/new"
@using Microsoft.AspNetCore.Antiforgery
@model IndexModel
@inject IAntiforgery antiforgery
@{
    var token = antiforgery.GetAndStoreTokens(HttpContext).RequestToken;
}
<h1>Index</h1>

<form method="post">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="name" name="name">
    </div>
    <div class="form-group">
        <label for="type">Type</label>
        <select class="form-control" id="type" name="type">
            <option value="Spore Syringe">Spore Syringe</option>
            <option value="Spore Print">Spore Print</option>
            <option value="Agar">Agar</option>
            <option value="Liquid Culture">Liquid Culture</option>
        </select>
    </div>
    <div class="form-group">
        <label for="strain">Strain</label>
        <select class="form-control" id="strain" name="strain">
            <option value="Golden Teacher">Golden Teacher</option>
            <option value="Mazapatec">Mazapatec</option>
            <option value="Cambodian">Cambodian</option>
            <option value="BPlus">B+</option>
        </select>
    </div>
    <div class="form-group">
        <label for="createdOn">Created On</label>
        <input type="date" class="form-control" id="createdOn" value="@DateTime.Now.ToString("yyyy-MM-dd")" name="createdOn">
    </div>
    <div class="form-group">
        <label for="createdBy">Created By</label>
        <select class="form-control" id="createdBy" name="createdBy">
            <option value="Ryan Gillooly">Ryan Gillooly</option>
            <option value="Calum Muirhead">Calum Muirhead</option>
            <option value="Aiden Neizer">Aiden Neizer</option>
            <option value="Callum Neizer">Callum Neizer</option>
        </select>
    </div>
    <div class="form-group">
        <label for="name">Number of Cultures</label>
        <input type="text" class="form-control" id="count" name="count">
    </div>
    
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<br/>
<br/>


<button class="btn btn-primary btn-danger" onclick="RazorFunction()">Previous Page</button>


<br/>
<br/>

<pre>@Model.responseString</pre>

@{
    <style>
        form {
          max-width: 500px;
          margin: 0 auto;
          padding: 20px;
          box-sizing: border-box;
          border: 1px solid #ddd;
          border-radius: 4px;
        }
        
        .form-group {
          margin-bottom: 20px;
        }
        
        .form-control {
          width: 100%;
          height: 40px;
          padding: 10px;
          font-size: 16px;
          border: 1px solid #ddd;
          border-radius: 1px;
          box-sizing: border-box;
        }
        
        .form-control:focus {
          border-color: #00b8d4;
          box-shadow: 0 0 10px rgba(0, 184, 212, 0.5);
        }
        
        label {
          display: flex;
          align-items: center;
          font-size: 14px;
          color: #666;
          margin-bottom: 5px;
        }
        
        label i {
          margin-right: 10px;
          font-size: 16px;
        }
        
        button[type="submit"] {
          width: 100%;
          height: 40px;
          background-color: #00b8d4;
          border: none;
          border-radius: 4px;
          font-size: 16px;
          color: #fff;
          cursor: pointer;
          transition: background-color 0.2s;
        }
        
        button[type="submit"]:hover {
          background-color: #0095c6;
        }
    </style>
}